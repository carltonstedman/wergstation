# use 256 colors in compatible xterms
if [ -n "$DISPLAY" ]; then
    export TERM=xterm-256color
fi

# add dataroot stuff
PATH=$HOME/dataroot/bin:$PATH

# source everything in ~/.bash
for f in $(ls ~/.bash/); do
    source ~/.bash/$f
done

# add my bin
PATH=$HOME/bin:$PATH

# use virtualenvwrapper
source /usr/local/bin/virtualenvwrapper.sh

